<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="mente.nova.mente_nova.controller.MainController"
      styleClass="mainNode">

    <VBox.margin>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </VBox.margin>
    
    <HBox>
        <VBox.margin>
            <Insets top="0" right="0" bottom="10" left="0"/>
        </VBox.margin>
        <Label text="Предметы" styleClass="title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Добавить предмет" styleClass="nodeButton"/>
    </HBox>
    
    <TilePane fx:id="subjectsTilePane" hgap="10" vgap="10" alignment="center"/>
</VBox> 